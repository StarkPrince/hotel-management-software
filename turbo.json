{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "globalEnv": [
    "NEXT_PUBLIC_FRONTEND_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "GITHUB_ID",
    "GITHUB_SECRET",
    "JWT_SECRET",
    "NEXT_PUBLIC_FB_APP_ID",
    "DATABASE_URL",
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**",
        "api/**",
        "public/build/**"
      ],
      "env": []
    },
    "dev": {
      "dependsOn": ["^db:generate", "^build"],
      "cache": false,
      "persistent": true
    },
    "install": {
      "dependsOn": ["^db:generate", "^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [],
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:reset": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    }
  }
}
